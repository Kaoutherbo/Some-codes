#include <stdio.h>
#include <string.h>
void ca1(char [8]);
int main(){
	int i;
	char bin_number[8]; 
	do{
	printf("Enter an 8-bits binary number ");
	scanf("%s",&bin_number);
		for(i=0;i<strlen(bin_number);i++)
		{
			if(bin_number[i]>2)
			{
				break;
			}
		}
	}while((strlen(bin_number)>8||strlen(bin_number)<8)&&(bin_number[i]>2));
	ca1(bin_number);
	return 0;
	}
void ca1(char a[8]){
	int i,j;
	if(a[0]=='1')
	{
	for(i=1;i<=7;i++)
	{
		if(a[i]=='1')
		{
			a[i]='0';
		}
		else if(a[i]=='0'){
			a[i]='1';
			}
 }}
	printf("%s",a);
	}
